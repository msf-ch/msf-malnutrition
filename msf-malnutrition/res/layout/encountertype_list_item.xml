<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical" 
    android:background="@drawable/btn_white_matte">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/encounterTypeName"
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:layout_weight="1.0"
            android:text="Adult initial xxxxx"
            android:textStyle="bold"
            android:textSize="20dp" />

        <TextView
            android:id="@+id/numberOfForms"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="4 forms"
            android:layout_gravity="center_vertical"
            android:textAppearance="?android:attr/textAppearanceSmall" />
    </LinearLayout>

    <TextView
        android:id="@+id/encounterTypeDescription"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ellipsize="end"
        android:maxLines="2"
        android:text="This encounter type does such and such, and as such it should be used for such and such a such. Furthermore, this should be hidden"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:textColor="@drawable/darkgray" />

</LinearLayout>