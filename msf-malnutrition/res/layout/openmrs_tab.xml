<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/openmrsTab"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >
    
    <LinearLayout
        android:id="@+id/linear2"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/searchPatientsButton"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_below="@+id/viewPatientsButton"
            android:layout_marginBottom="10dp"
            android:clickable="true"
            android:drawableLeft="@drawable/openmrs_icon_small"
            android:enabled="true"
            android:gravity="center"
            android:onClick="searchPatientButtonClicked"
            android:padding="10dp"
            android:text="@string/launch_screen_search_patients"
            android:textSize="24dp" 
            android:textColor="@drawable/gray"/>
    </LinearLayout>

</ScrollView>